{
  "name": "termost",
  "version": "0.0.1",
  "description": "Get the most of your terminal",
  "author": {
    "name": "Ayoub Adib",
    "email": "adbayb@gmail.com",
    "url": "https://twitter.com/adbayb"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adbayb/termost.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "node -r esbuild-register example/index.ts",
    "verify": "yarn lint & tsc --noEmit",
    "fix": "yarn lint --fix",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "prettier . --ignore-path .gitignore --ignore-path .prettierignore --write"
  },
  "prettier": "@adbayb/prettier-config",
  "eslintConfig": {
    "extends": "@adbayb"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint"
    ],
    "**/*.{json,md,mdx,html,css}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@adbayb/eslint-config": "0.7.0",
    "@adbayb/prettier-config": "0.7.0",
    "@adbayb/ts-config": "0.7.0",
    "@types/inquirer": "7.3.3",
    "@types/listr": "0.14.4",
    "esbuild-register": "2.6.0",
    "eslint": "7.31.0",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "inquirer": "8.1.2",
    "listr": "0.14.3"
  }
}
