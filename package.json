{
	"name": "termost",
	"version": "0.3.0",
	"description": "Get the most of your terminal",
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/termost.git"
	},
	"license": "MIT",
	"source": "src/index.ts",
	"main": "dist/index.js",
	"files": [
		"dist"
	],
	"keywords": [
		"cli",
		"terminal",
		"args",
		"argument",
		"option",
		"command",
		"task",
		"question",
		"message"
	],
	"scripts": {
		"prepublishOnly": "yarn verify && yarn build",
		"build": "rm -rf dist && tsc",
		"example": "node -r esbuild-register example/index.ts",
		"verify": "yarn lint & yarn types && yarn test",
		"fix": "yarn lint --fix",
		"lint": "eslint . --ignore-path .gitignore",
		"types": "tsc --noEmit",
		"format": "prettier . --ignore-path .gitignore --ignore-path .prettierignore --write",
		"test": "jest",
		"release": "semantic-release"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"inquirer": "8.2.0",
		"listr": "0.14.3"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "0.7.0",
		"@adbayb/prettier-config": "0.7.0",
		"@adbayb/ts-config": "0.7.0",
		"@semantic-release/git": "9.0.0",
		"@types/inquirer": "7.3.3",
		"@types/jest": "27.0.1",
		"@types/listr": "0.14.4",
		"esbuild": "0.12.20",
		"esbuild-jest": "0.5.0",
		"esbuild-register": "3.0.0",
		"eslint": "7.32.0",
		"husky": "4.3.8",
		"jest": "27.0.6",
		"lint-staged": "11.1.2",
		"prettier": "2.3.2",
		"semantic-release": "17.4.5",
		"typescript": "4.3.5"
	},
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "esbuild-jest"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"yarn fix",
			"yarn test --bail --findRelatedTests"
		],
		"**/*.{json,md,mdx,html,css}": [
			"yarn format"
		]
	},
	"release": {
		"branches": [
			"main"
		],
		"ci": false,
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"breaking": true,
							"release": "major"
						},
						{
							"revert": true,
							"release": "patch"
						},
						{
							"type": "feat",
							"release": "minor"
						},
						{
							"type": "fix",
							"release": "patch"
						},
						{
							"type": "perf",
							"release": "patch"
						},
						{
							"type": "refactor",
							"release": "patch"
						},
						{
							"type": "chore",
							"scope": "deps",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/npm",
			[
				"@semantic-release/git",
				{
					"message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
				}
			],
			"@semantic-release/github"
		]
	}
}
